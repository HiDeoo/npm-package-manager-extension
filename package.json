{
  "name": "npm-package-manager-extension",
  "description": "Browser extension adding support for multiple package managers to npmjs.com",
  "homepage": "https://github.com/HiDeoo/npm-package-manager-extension",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": "HiDeoo",
  "license": "MIT",
  "scripts": {
    "dev:edge": "pnpm manifest edge && vite build --watch",
    "build:edge": "pnpm manifest edge && vite build",
    "manifest": "tsx scripts/manifest",
    "lint": "eslint . --max-warnings=0 && svelte-check --tsconfig ./tsconfig.json",
    "test": "pnpm manifest edge --test && vite build && playwright test",
    "test:ci": "xvfb-run pnpm test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@hideoo/eslint-config": "0.2.3",
    "@hideoo/prettier-config": "0.0.1",
    "@playwright/test": "1.23.4",
    "@sveltejs/vite-plugin-svelte": "1.0.1",
    "@tsconfig/svelte": "3.0.0",
    "@types/chrome": "0.0.193",
    "@types/node": "16.11.45",
    "clipboardy": "3.0.0",
    "eslint": "8.19.0",
    "eslint-plugin-svelte3": "4.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-svelte": "2.7.0",
    "svelte": "3.49.0",
    "svelte-check": "2.8.0",
    "svelte-preprocess": "4.10.7",
    "tslib": "2.4.0",
    "tsx": "3.8.0",
    "typescript": "4.7.4",
    "vite": "3.0.2",
    "vite-tsconfig-paths": "3.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "package",
    "manager",
    "npm",
    "chrome",
    "edge",
    "extension"
  ],
  "bugs": {
    "url": "https://github.com/HiDeoo/npm-package-manager-extension/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HiDeoo/npm-package-manager-extension"
  },
  "packageManager": "pnpm@7.4.0",
  "prettier": "@hideoo/prettier-config",
  "lint-staged": {
    "**/*": "prettier -w --u --plugin-search-dir=. --cache",
    "**/*.{ts,svelte}": "eslint --max-warnings=0"
  }
}
