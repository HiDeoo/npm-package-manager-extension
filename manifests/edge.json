{
  "manifest_version": 3,
  "name": "Npm Package Manager",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.npmjs.com/package/*"],
      "js": ["loader.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "matches": ["https://www.npmjs.com/*"],
      "resources": ["content.js", "assets/*"]
    }
  ]
}
